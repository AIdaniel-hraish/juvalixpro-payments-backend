{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/create-order", "dest": "/api/create-order.js" },
    { "src": "/api/capture-order", "dest": "/api/capture-order.js" },

    { "src": "/success", "dest": "/success.html" },
    { "src": "/cancel", "dest": "/cancel.html" },
    { "src": "/success.html", "dest": "/success.html" },
    { "src": "/cancel.html", "dest": "/cancel.html" }
  ]
}
